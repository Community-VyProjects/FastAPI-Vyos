# VyOS API Configuration
VYOS_HOST=IP
VYOS_API_KEY=KEY
VYOS_HTTPS=true
# VYOS_PORT=443  # Uncomment to specify a non-default port
# VYOS_API_URL=https://vyos-router.example.com/retrieve  # Optional, only needed for compatibility with old code

# SSL certificate settings
# CERT_PATH=/path/to/certificate.pem  # Optional, path to custom certificate
TRUST_SELF_SIGNED=true  # Set to true to accept self-signed certificates (not recommended for production)

# Application settings
ENVIRONMENT=development  # Set to 'production' for production mode

# Security
CERT_PATH=  # For custom certificate path, leave empty to use system certs

# Authentication Settings (Optional)
OIDC_DISCOVERY_URL=YOUR_OIDC_DISCOVERY_URL (example: https://accounts.google.com/.well-known/openid-configuration)
OIDC_CLIENT_ID=YOUR_CLIENT_ID
OIDC_CLIENT_SECRET=YOUR_SECRET
AUTH_ENABLED=false
SESSION_SECRET=your_session_secret_key
JWT_SECRET=your_jwt_secret_key

# Application Settings
PORT=3001
HOST=0.0.0.0
WORKERS=4  # Number of worker processes for Gunicorn (typically 2-4 times the number of CPU cores)

# Uncomment for production
# ENVIRONMENT=production 
