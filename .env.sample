# VyOS API Configuration
VYOS_API_KEY=your_api_key_here
VYOS_API_URL=https://your-vyos-router-ip/retrieve

# Security
CERT_PATH=  # For custom certificate path, leave empty to use system certs
TRUST_SELF_SIGNED=true  # Set to 'false' to validate certificates (more secure)

# Application Settings
PORT=8000
HOST=0.0.0.0
WORKERS=4  # Number of worker processes for Gunicorn (typically 2-4 times the number of CPU cores)

# Uncomment for production
# ENVIRONMENT=production 